#!/bin/bash
# vim:ft=bash

SCRIPT_DIR=$(dirname "$0")

source $SCRIPT_DIR/__params ## import capture params

# ------------------------
# Require FISH to continue
if ! command -v fish &> /dev/null; then
    echo "Error: Fish could not be found! Please install." 1>&2
    exit 64
fi

source $SCRIPT_DIR/__var ## import variables

# ------------------------
# Symlink modules

mkdir -pv "$log_path"
if [ -f $symlink_logfile_path ]; then
	: > "$symlink_logfile_path" # empty symlink log file
fi


symlink_config() {
	item_path=$1
	dest_path=${2-$config_path}
	symlink_path="$dest_path/$(basename $item_path)"

    printf "Set symlink: $item_path --> $symlink_path\n"

	if [ -d "$symlink_path" ]; then rm -rf $symlink_path &> /dev/null;
	elif [ -f "$symlink_path" ]; then rm $symlink_path &> /dev/null; fi

	ln -sf $item_path $dest_path
	echo $symlink_path >> "$symlink_logfile_path"
}

## configs in `modules` dir
shopt -s dotglob
for entry in "$modules_path"/*; do symlink_config $entry; done
shopt -u dotglob

symlink_config $dotfiles_path/.gitconfig $HOME # gitconfig
symlink_config $dotfiles_path/.bashrc $HOME # bash-shell

